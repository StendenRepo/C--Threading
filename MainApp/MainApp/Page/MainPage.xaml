<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MainApp.MainPage">

    <StackLayout Padding="10" VerticalOptions="Start">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Text="Vul hier het kenteken in:" VerticalTextAlignment="Center" FontSize="24"/>
                <Entry Grid.Row="0" Grid.Column="2" x:Name="cta_subForm" MaxLength="8" BackgroundColor="#f0b504" HorizontalTextAlignment="Center" TextTransform="Uppercase" TextColor="Black" FontSize="22" FontAttributes="Bold"/>
            <Button Grid.Row="0" Grid.Column="3" Text="controleer" Clicked="OnSubmitClicked" FontSize="14" BackgroundColor="White"/>
        </Grid>
    </StackLayout>



</ContentPage>
