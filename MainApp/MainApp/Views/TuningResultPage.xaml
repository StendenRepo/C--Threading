<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MainApp.ViewModels"
             x:DataType="viewModels:TuningViewModel"
             x:Class="MainApp.Views.TuningResultPage">
    <ContentPage.BindingContext>
        <viewModels:TuningViewModel></viewModels:TuningViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid ColumnSpacing="2" Padding="50" ColumnDefinitions="*, *, *">
            <Border>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Grid BackgroundColor="Grey" Padding="20" RowDefinitions="Auto, *">
                    <Image Grid.Row="0" Height="350" Width="500" Source="https://pictures.vwe.nl/ATL/volkswagen/ATX_M2345_F2.jpg" />
                    <Border Grid.Row="1" BackgroundColor="Beige">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <Grid Padding="20" RowDefinitions="*, *, *, *" ColumnDefinitions="Auto, *, 15, Auto, *" ColumnSpacing="10">
                            <Label Grid.ColumnSpan="2" Text="{Binding CarData.FullName}"></Label>
                            <Label Grid.Row="1" Grid.Column="0" Text="Kenteken"></Label>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding CarData.LicensePlate}"></Label>
                            <Label Grid.Row="2" Grid.Column="0" Text="Type"></Label>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding CarData.VehicleType}"></Label>
                            <Label Grid.Row="3" Grid.Column="0" Text="Vermogen (PK)"></Label>
                            <Label Grid.Row="3" Grid.Column="1" Text="68"></Label>
                            <Label Grid.Row="1" Grid.Column="3" Text="Koppel"></Label>
                            <Label Grid.Row="1" Grid.Column="4" Text="95"></Label>
                            <Label Grid.Row="2" Grid.Column="3" Text="Acceleratie (0-100)"></Label>
                            <Label Grid.Row="2" Grid.Column="4" Text="14.4 sec"></Label>
                            <Label Grid.Row="3" Grid.Column="3" Text="Topsnelheid"></Label>
                            <Label Grid.Row="3" Grid.Column="4" Text="161 km/u"></Label>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Button Grid.Column="1" Grid.Row="0" Command="{Binding ScrapeCommand}"></Button>
            <Label HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="2" Text="{Binding Plate}"></Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>